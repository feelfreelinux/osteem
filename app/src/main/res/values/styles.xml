<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryLight">@color/colorAccentLight</item>
        <item name="colorSecondaryDark">@color/colorAccentDark</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="snackbarButtonStyle">?attr/borderlessButtonStyle</item>

    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_titletext_text_size</item>
    </style>

    <style name="Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_text_size</item>
    </style>

</resources>
